			let chartMax = Math.max(...data)*2
			if (chartMax < 2) chartMax = 2

			new Chart($('#chartCanvas')[0].getContext('2d'), {
				type: 'line',
				data: {
					labels: labels,
					datasets: [{
						data: data, backgroundColor: '#f0f2', borderColor: '#f0f', pointRadius: 0
					}]
				},
				options: {
